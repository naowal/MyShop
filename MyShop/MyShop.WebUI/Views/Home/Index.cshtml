@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>สินค้าล่าสุด</h1>

@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450;padding:10px;margin:10px;border-top: solid thin whitesmoke">
    <div class="col-md-12">
        <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image"/>
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Name,"Details", new { id=item.Id})</strong>
    </div>
    <div class="col-md-12">
        <p>@item.Description</p>
    </div>
    <div class="col-md-12">
        <p>@item.Price</p>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-default">ใส่ลงในตะกร้าสินค้า</a>
    </div>
</div>
}

<div class="col-md-12 clearfix"/>